<div class="accordion overflow-scroll" id="{{accordionwrapperid}}">
    <div class="card border rounded">
        <div class="card-header" id="globalsettingsheading">
            <div id="linkwrapper" class="position-relative d-flex ftoggler align-items-center position-relative mr-1">
                <a data-toggle="collapse" data-target="#globalsettingsbody" aria-expanded="true" role="button"
                   aria-controls="globalsettingsbody"
                   class="btn btn-icon mr-1 icons-collapse-expand justify-content-center">
                    <span class="expanded-icon icon-no-margin p-2" title="Collapse">
                        <i class="icon fa fa-chevron-right fa-fw " aria-hidden="true"></i>
                    </span>
                    <span class="collapsed-icon icon-no-margin p-2" title="Expand">
                    <span class="dir-rtl-hide">
                        <i class="icon fa fa-chevron-down fa-fw " aria-hidden="true"></i>
                    </span>
                    <span class="dir-ltr-hide">
                        <i class="icon fa fa-chevron-left fa-fw " aria-hidden="true"></i>
                    </span>
                    </span>
                </a>
            <h4 class="mb-0" class="d-flex align-self-stretch align-items-center mb-0">
                {{#instancename}}
                    {{instancename}} {{#str}} settings , mod_mootimeter {{/str}}</h4>
                {{/instancename}}
                {{^instancename}}
                    {{#str}} createnewpagesettings , mod_mootimeter {{/str}}</h4>
                {{/instancename}}
            </div>
        </div>

        <div id="globalsettingsbody" class="collapse" aria-labelledby="globalsettingsheading"
             data-parent="#{{accordionwrapperid}}">
            <div class="card-body">
                <div class="mootimetersettings mootimeterfullwidth">
                    <label for="mootimeter_selecttype" class="form-label">{{#str}}
                        pagetype , mod_mootimeter {{/str}}</label>
                    <select id="mootimeter_selecttype" class="form-control mootimeterfullwidth" name="tool">
                        <option>{{#str}} please_select, mod_mootimeter {{/str}}</option>
                        {{#tools}}
                            <option value="{{tool}}" {{selected}}>
                                <img src="{{{pix}}}" width="80%" style="margin: 0 auto;">
                                {{name}}
                            </option>
                        {{/tools}}
                    </select>
                </div>
                <div>
                    <label for="mootimeter_title" class="form-label">{{#str}} title , mod_mootimeter {{/str}}</label>
                    <input id="mootimeter_title" type="text" class="form-control mootimeterfullwidth" name="title"
                           value="{{title}}">
                </div>
                <div>
                    <label for="mootimeter_question" class="form-label">{{#str}}
                        question , mod_mootimeter {{/str}}</label>
                    <textarea class="form-control mootimeterfullwidth" id="mootimeter_question"
                              name="question">{{{question}}}</textarea>
                </div>
                <div>
                    <label for="mootimeter_sortorder" class="form-label">{{#str}}
                        sortorder , mod_mootimeter {{/str}}</label>
                    <input id="mootimeter_sortorder" type="number" class="form-control mootimeterfullwidth"
                           name="sortorder" value="{{sortorder}}">
                </div>
            </div>
        </div>
    </div>
    {{{tooladditionalfields}}}
    {{#toolsettings}}
        <div class="card mt-4 rounded">
            <div class="card-header" id="toolsettingsheading">
                <!-- TODO Make two collapsible elements
                <a data-toggle="collapse" data-target="#toolsettingsbody" aria-expanded="true" role="button"
                   aria-controls="toolsettingsbody"
                   class="btn btn-icon mr-1 icons-collapse-expand justify-content-center">
                        <span class="expanded-icon icon-no-margin p-2" title="Collapse">
                            <i class="icon fa fa-chevron-down fa-fw " aria-hidden="true"></i>
                        </span>
                    <span class="collapsed-icon icon-no-margin p-2" title="Expand">
                        <span class="dir-rtl-hide">
                            <i class="icon fa fa-chevron-right fa-fw " aria-hidden="true"></i>
                        </span>
                        <span class="dir-ltr-hide">
                            <i class="icon fa fa-chevron-left fa-fw " aria-hidden="true"></i>
                        </span>
                        </span>
                </a>-->
                <h4 class="mb-0">{{#str}} toolsettings , mod_mootimeter {{/str}}</h4>
            </div>

            <div id="toolsettingsbody" aria-labelledby="toolsettingsheading"
                 data-parent="#{{accordionwrapperid}}">
                <div class="card-body">
                    {{{toolsettings}}}
                </div>
            </div>
        </div>
    {{/toolsettings}}
</div>